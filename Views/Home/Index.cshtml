                <div class="content d-flex flex-column align-items-center justify-content-center" id="content1">
                    <div>
                        <h3 class="text-black fs-5"> Grotta Gigante</h3>
                        @if (User.IsInRole(" User"))
                        {
                            <button class="button-background-move">@Html.ActionLink("Scopri di più", "GrottaGigante", "Grotte", new { area = "" }, new { @class = "nav-link" })</button>
                        }      
                    else { }
                    </div>
                </div>
            </div>
        </div>
        <div class="box">
            <div class="body">
                <div class="imgContainer">
                    <img src="https://www.viaggioinbaule.it/wp-content/uploads/2021/08/grotte-di-frasassi.jpg" alt="">
                </div>
                <div class="content d-flex flex-column align-items-center justify-content-center" id="content2">
                    <div>
                        <h3 class="text-black fs-5">Grotte di Frasassi</h3>
                        @if (User.IsInRole("User"))
                        {
                            <button class="button-background-move">@Html.ActionLink("Scopri di più", "GrottediFrasassi", "Grotte", new { area = "" }, new { @class = "nav-link" })</button>
                        }  
                    else { }
